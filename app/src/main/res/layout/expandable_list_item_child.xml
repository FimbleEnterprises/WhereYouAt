<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#dbdbda">


    <ImageView
        android:id="@+id/child_list_item_left_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/car2" />

    <TextView
        android:id="@+id/child_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/child_list_item_left_icon"
        android:text="Title"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/child_list_item_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/child_list_item_title"
        android:layout_toRightOf="@id/child_list_item_left_icon"
        android:text="Subtitle" />

</RelativeLayout>
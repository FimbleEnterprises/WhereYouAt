<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_master"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:background="#EEEEEE"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtServiceStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/service_status"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:background="#FDFAFA"
        android:padding="3dp">

        <com.fimbleenterprises.whereuat.MyViewPager
            android:id="@+id/main_pager_yo_sales_perf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            android:overScrollMode="ifContentScrolls"
            tools:mContext=".Activity_ManualTrip">

            <androidx.viewpager.widget.PagerTitleStrip
                android:id="@+id/pager_title_strip_sales_perf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="#F7F7F8"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="#302F2F" />

        </com.fimbleenterprises.whereuat.MyViewPager>

    </LinearLayout>


</LinearLayout>